@model Microsoft.AspNetCore.Identity.IdentityRole<int>

<form id="editCreateForm" method="post" data-url="/Rol/Save">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group mb-3">
        <label for="Name">Nombre</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required oninput="this.value = this.value.trim()" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <button type="button" class="btn btn-secondary" onclick="cerrarModal()">Cancelar</button>
    </div>
</form>
